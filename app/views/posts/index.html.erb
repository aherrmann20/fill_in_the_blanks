<%= render 'site_title' %>
<h1>Posts</h1>

<ul>
	<% @posts.each do |post| %>
		<li>
			<strong><%= link_to post.title, post_path(post) %></strong>
			<%= link_to "Edit", edit_post_path(post) %>
			<%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete #{post.title}?"} %>
		</li>
	<% end %>
</ul>

<p><%= link_to 'Create Post', new_post_path %></p>
